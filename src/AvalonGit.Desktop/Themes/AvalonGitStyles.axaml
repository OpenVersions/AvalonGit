<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Menu Button Style -->
    <Style Selector="Button.menuButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>
    
    <Style Selector="Button.menuButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#33FFFFFF"/>
    </Style>

    <!-- Title Bar Button Style -->
    <Style Selector="Button.titleBarButton">
        <Setter Property="Width" Value="46"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <Style Selector="Button.titleBarButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#33FFFFFF"/>
    </Style>
    
    <Style Selector="Button.titleBarButton:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#22FFFFFF"/>
    </Style>

    <!-- Close Button Hover -->
    <Style Selector="Button.titleBarButton.closeButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#E81123"/>
    </Style>

    <!-- Window Icon Path -->
    <Style Selector="Path.windowIcon">
        <Setter Property="Stroke" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="StrokeThickness" Value="1"/>
    </Style>

</Styles>
